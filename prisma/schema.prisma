datasource db {
    provider = "postgresql"
    url      = env("DEFAULT_DATABASE")
}

// generator
generator py {
    provider             = "prisma-client-py"
    interface            = "asyncio"
    recursive_type_depth = 5
}

model User {
    id         String   @id @unique
    first_name String?
    last_name  String?
    email      String   @unique
    password   String?
    is_admin   Boolean
    events Event[]
    created_at DateTime @default(now())
    updated_at DateTime @default(now())
}

model Event {
    id        String        @id @unique
    name      String
    date_time DateTime      @default(now())
    location  String
    thumbnail String
    images    EventImages[]
    user User @relation(fields: [user_id], references: [id])
    user_id String
}

model EventImages {
    id       String @id @unique
    event    Event  @relation(fields: [event_id], references: [id])
    uri      String
    name     String
    event_id String
}
